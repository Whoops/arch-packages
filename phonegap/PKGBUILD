# Maintainer: Roy Lines <roy@roylines.co.uk>

pkgname=phonegap
pkgver=2.2.0
pkgrel=1
pkgdesc="Easily create apps with the only free open source framework that supports 7 mobile platforms."
arch=('any')

url="https://github.com/phonegap/phonegap"
license=('MIT')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/phonegap/${pkgname}/tarball/${pkgver}")

md5sums=('ade4f686926443cb0fd8a3e850015fa0')

build() {
	tar -xvzf ${pkgname}-${pkgver}.tar.gz
}

package() {
  cd "$pkgdir"
  mkdir -p opt
  cp -a "$srcdir/${pkgname}-${pkgname}-8a3aa47" opt/$pkgname
  chmod -R o=g opt/$pkgname
}
